{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    ":preserveSemverRanges",
    ":pinDigests",
    "group:monorepos",
    "group:recommended",  // Groups common non-monorepo packages (e.g., linters, testers)
    "helpers:pinGitHubActionDigests",
    "workarounds:all"
  ],

  "timezone": "Asia/Kolkata",  // Keep your timezone if desired

  "assignees": ["teneplaysofficial"],
  "addLabels": ["dependencies", "renovate"],

  "minimumReleaseAge": "3 days",  // Wait for releases to stabilize before processing

  "prConcurrentLimit": 10,       // Default; prevents overload
  "prHourlyLimit": 2,            // Default; gentle PR creation rate

  "automerge": true,
  "automergeType": "pr",         // Use platform-native automerge (faster on GitHub)
  "automergeStrategy": "squash",

  "dependencyDashboardAutoclose": false,

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "recreateWhen": "auto",
    "schedule": ["every weekend"]  // Common: weekly on weekends
  },

  "postUpdateOptions": ["pnpmDedupe"],  // pnpm-specific: optimizes install tree

  "packageRules": [
    {
      "description": "Group and automerge lockfile maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "groupName": "lockfile maintenance",
      "automerge": true
    },
    {
      "description": "Automerge non-major updates (minor, patch, pin, digest)",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "description": "Require review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["major-update"]  // Optional: extra label for visibility
    }
  ]
}