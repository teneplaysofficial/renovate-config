{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Kolkata",

  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    ":disableRateLimiting"
  ],

  "assignees": ["teneplaysofficial"],
  "labels": ["dependencies", "renovate"],

  "allowedAuthors": [
    "renovate[bot]",
    "pre-commit-ci[bot]",
    "github-actions[bot]"
  ],

  "stabilityDays": 3,
  "rebaseWhen": "auto",

  "prHourlyLimit": 5,
  "prConcurrentLimit": 20,
  "branchConcurrentLimit": 50,

  "automerge": true,
  "platformAutomerge": true,
  "automergeStrategy": "squash",
  "automergeRequireAllStatusChecks": true,

  "dependencyDashboardAutoclose": false,

  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "schedule": ["after 9pm on Sunday"],
    "groupName": "lockfile maintenance",
    "automerge": true,
    "platformAutomerge": true
  },

  "postUpdateOptions": ["pnpmDedupe"],

  "packageRules": [
    {
      "description": "Single PR for all lockfile maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "groupName": "lockfile maintenance",
      "separateMajorMinor": false,
      "separateMultipleMajor": false,
      "additionalBranchPrefix": "",
      "commitMessageTopic": "lockfiles",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "description": "Automerge minor, patch and digest updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Group devDependencies",
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies"
    },
    {
      "description": "Group all @types dependencies",
      "matchPackagePatterns": ["^@types/"],
      "groupName": "@types dependencies"
    }
  ]
}
