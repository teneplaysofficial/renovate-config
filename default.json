{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Kolkata",

  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":preserveSemverRanges",
    ":pinDigests",

    "group:allNonMajor",
    "group:allDevDependencies",
    "group:types",

    "group:monorepos",

    "group:githubActions",
    "group:docker",

    "workarounds:all"
  ],

  "assignees": ["teneplaysofficial"],
  "labels": ["dependencies", "renovate"],

  "minimumReleaseAge": "3 days",
  "rebaseWhen": "auto",

  "prHourlyLimit": 5,
  "prConcurrentLimit": 20,
  "branchConcurrentLimit": 50,

  "automerge": true,
  "automergeStrategy": "squash",

  "dependencyDashboardAutoclose": false,

  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "schedule": ["every sunday"],
    "groupName": "lockfile maintenance",
    "automerge": true
  },

  "postUpdateOptions": ["pnpmDedupe"],

  "packageRules": [
    {
      "description": "Single PR for all lockfile maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "groupName": "lockfile maintenance",
      "commitMessageTopic": "lockfiles",
      "automerge": true
    },
    {
      "description": "Automerge minor, patch and digest updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
