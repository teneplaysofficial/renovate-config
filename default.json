{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Kolkata",

  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":preserveSemverRanges",

    "group:allNonMajor",
    "group:monorepos",
    "group:githubActions",

    "workarounds:all"
  ],

  "assignees": ["teneplaysofficial"],
  "addLabels": ["dependencies", "renovate"],

  "minimumReleaseAge": "3 days",
  "rebaseWhen": "auto",

  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,

  "automerge": true,
  "automergeStrategy": "squash",

  "dependencyDashboardAutoclose": false,

  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "auto",
    "schedule": ["on sunday"],
    "groupName": "lockfile maintenance",
    "automerge": true
  },

  "postUpdateOptions": ["pnpmDedupe"],

  "packageRules": [
    {
      "description": "Single PR for all lockfile maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "groupName": "lockfile maintenance",
      "commitMessageTopic": "lockfiles",
      "automerge": true
    },
    {
      "description": "Group type packages",
      "matchPackagePatterns": ["^@types/"],
      "groupName": "type dependencies"
    },
    {
      "description": "Group non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "non-major dependencies"
    },
    {
      "description": "Automerge minor, patch and digest updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
