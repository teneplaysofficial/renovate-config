{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Kolkata",

  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    ":disableRateLimiting"
  ],

  "assignees": ["teneplaysofficial"],
  "labels": ["dependencies", "renovate"],

  "allowedAuthors": [
    "renovate[bot]",
    "pre-commit-ci[bot]",
    "github-actions[bot]"
  ],
  "ignorePrAuthor": false,

  "stabilityDays": 3,
  "requiredStatusChecks": ["continuous-integration"],
  "rebaseWhen": "conflicted",

  "prHourlyLimit": 5,
  "prConcurrentLimit": 20,
  "branchConcurrentLimit": 50,

  "automerge": true,
  "platformAutomerge": true,
  "automergeStrategy": "squash",
  "automergeRequireAllStatusChecks": true,

  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "respectLatest": false,

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "platformAutomerge": true,
    "recreateWhen": "always",
    "schedule": ["after 9pm on Sunday"]
  },

  "npm": { "enabled": true },
  "pnpm": { "enabled": true },
  "yarn": { "enabled": true },
  "bun": { "enabled": true },
  "deno": { "enabled": true },
  "gomod": { "enabled": true },

  "postUpdateOptions": ["pnpmDedupe"],

  "packageRules": [
    {
      "description": "Always automerge lock file maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "description": "Automerge minor, patch & digest updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Group devDependencies",
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies"
    },
    {
      "description": "Group all @types/* packages",
      "matchPackagePatterns": ["^@types/"],
      "groupName": "@types dependencies"
    },
    {
      "description": "Monorepo: prefix branch & commit with package path",
      "matchManagers": ["npm", "pnpm", "yarn", "bun"],
      "matchFileNames": ["**/package.json"],
      "additionalBranchPrefix": "{{packageFileDir}}/",
      "commitMessageSuffix": " ({{packageFileDir}})"
    },
    {
      "description": "Deno: automerge minor & patch updates",
      "matchManagers": ["deno"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Deno: never automerge major updates",
      "matchManagers": ["deno"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Go modules: automerge minor & patch updates",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Go modules: never automerge major updates",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
