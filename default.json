{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Kolkata",

  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":preserveSemverRanges",
    "workarounds:all"
  ],

  "assignees": ["teneplaysofficial"],
  "addLabels": ["dependencies", "renovate"],

  "gitIgnoredAuthors": [
    "pre-commit-ci[bot] <66853113+pre-commit-ci[bot]@users.noreply.github.com>"
  ],

  "minimumReleaseAge": "3 days",
  "rebaseWhen": "auto",

  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,

  "automerge": true,
  "automergeStrategy": "squash",

  "dependencyDashboardAutoclose": false,

  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["on sunday"],
    "groupName": "lockfile maintenance",
    "automerge": true
  },

  "postUpdateOptions": ["pnpmDedupe"],

  "packageRules": [
    {
      "description": "Group GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "github actions"
    },
    {
      "description": "Group Docker dependencies",
      "matchDatasources": ["docker"],
      "groupName": "docker dependencies"
    },
    {
      "description": "Group devDependencies",
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev dependencies"
    },
    {
      "description": "Group type packages",
      "matchPackagePatterns": ["^@types/"],
      "groupName": "type dependencies"
    },
    {
      "description": "Group non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "non-major dependencies"
    },
    {
      "description": "Automerge minor, patch and digest updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Never automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
